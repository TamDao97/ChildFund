@{
    ViewBag.Title = "Thư viện tài liệu/Resources";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ string type = ViewBag.Type; }
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box collapsed">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm/Search</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">Nhóm tài liệu/Document type</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="documentTyeid">
                                            <option value="">Tất cả</option>
                                            @Html.Action("DocumentTyeCBB", "Combobox");
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">Tên tài liệu/Document name</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">Mô tả/Description</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="description">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Từ ngày/From</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadFrom">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Đến ngày/To</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadTo">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">Trạng thái/Status</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="">Tất cả/All</option>
                                            <option value="1">Hiển thị/Displayed</option>
                                            <option value="0">Không hiển thị/Not displayed</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-8 col-sm-8 col-xs-12 text-right">
                                <div class="form-group margin-top-10">
                                    <button onclick="SearchDocument()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm/Search</span>
                                    </button>
                                    <button onclick="RefreshListDocument()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới/Refresh</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Document checklist</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-6 text-left">
                                <h4>
                                    Tất cả tài liệu/Total number <b class="badge badge-primary" id="count_data"></b>
                                </h4>
                            </div>
                            @if (type.Equals("0") || type.Equals("1"))
                            {
                                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 text-right">
                                    <a href="/Document/CreateDocument" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-plus"></i> &nbsp; <span>Thêm mới/Add new document</span>
                                    </a>
                                </div>
                            }
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                @if (type.Equals("0") || type.Equals("1"))
                                {
                                    <hr class="margin-bottom-10 margin-top-0" />
                                    <button class="btn btn-xs btnfuntion" title="Cập nhật/Update">
                                        <i class="material-icons btnicon" style="color:orange">edit</i>
                                    </button><small class="padding-right-20"> Cập nhật/Update</small>
                                    <button class="btn btn-xs btnfuntion" title="Xóa/Delete">
                                        <i class="material-icons btnicon" style="color:red">delete</i>
                                    </button><small class="padding-right-20"> Xóa/Delete</small>
                                }
                                <button class="btn btn-xs btnfuntion" title="Tải về/Download">
                                    <i class="material-icons btnicon" style="color:#337ab7">file_download</i>
                                </button>&nbsp;<small class="padding-right-20">Tải về/Download</small>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/DocumentListControllers.js"></script>
<script>
    window.onload = SearchDocument();
</script>
