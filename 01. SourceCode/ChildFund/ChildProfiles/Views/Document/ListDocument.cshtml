@model IList<ChildProfiles.Model.Document.DocumentLibrarySearchResult>
@{ string uploadDate = ""; string type = ViewBag.Type; }
<div style="overflow-x:auto">
    <table class="table table-bordered table-hover" style="min-width:1300px">
        <thead>
            <tr>
                <th width="50px" class="text-center">No.</th>
                <th width="100px" class="text-center">Function</th>
                <th width="200px">Document type</th>
                <th width="280px">Document name</th>
                <th>Description</th>
                <th>Size</th>
                <th width="180px">Uploaded date</th>
                <th width="180px">Uploaded by</th>
                <th width="120px">Status</th>

            </tr>
        </thead>
        <tbody>
            @{ int index = ViewBag.Index; string content = "";}
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    content = NTS.Common.Utils.Common.FormatContentNews(item.Description, 110);
                    index++;
                    uploadDate = "";
                    if (item.UploadDate != null)
                    {
                        uploadDate = item.UploadDate.ToString("dd/MM/yyyy");
                    }
                    <tr>
                        <td class="text-center">@index</td>
                        <td align="center">
                            @if (type.Equals("0") || type.Equals("1"))
                            {
                                <a href="/Document/UpdateDocument/@item.Id" class="btn btn-xs btnfuntion" title="Cập nhật/Update"><i class="material-icons btnicon" style="color:orange">edit</i></a>
                                <button onclick="DeleteConfim('@item.Id')" type="button" class="btn btn-xs btnfuntion" title="Xóa/Delete"><i class="material-icons btnicon" style="color:red">delete</i></button>
                            }

                            <a href="@item.Path" target="_blank" class="btn btn-xs btnfuntion" title="Tải về"><i class="material-icons btnicon">file_download</i></a>
                        </td>
                        <td>@item.DocumentTypeidView</td>
                        <td>@item.Name</td>
                        <td>@content</td>
                        <td>@(item.Size / 1000) (Kb)</td>
                        <td>@uploadDate</td>
                        <td>@item.UploadBy</td>
                        <td>
                            @if (item.IsDisplay == true)
                            {<span>Hiển thị/Displayed</span> }
                            else
                            { <span>Không hiển thị/Not displayed</span>}
                        </td>

                    </tr>
                }
            }
    </table>
    <a href="#" id="linkDowload"></a>
</div>
<div class="pagerbottom margin-top-10">
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
        <div class="form-group">
            <div class="controls">
                <select class="form-control combobox-padding" onchange="ChangeSize()" id="pageSize">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option value="50">50</option>
                </select>
                <span>record(s)/Page</span>
            </div>
        </div>
    </div>
    <div class="col-lg-8 col-md-8 col-sm-6 col-xs-6">
        @Html.Raw(ViewBag.pages)
    </div>
</div>
<script>
    $('#count_data').html(@ViewBag.TotalItem);
    $('#pageSize').val(@ViewBag.PageSize);
</script>
