@{
    ViewBag.Title = "Add new document";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thêm mới tài liệu/Add new document</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-8 col-md-7 col-sm-6 col-xs-12 no-padding">

                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Nhóm tài liệu/Document type</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="documentTyeid">
                                                @Html.Action("DocumentTyeCBB", "Combobox");
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="margin-top:30px; margin-left:-20px">
                                    <button onclick="DocumentTypeShow()" type="button" class="btn btn-xs btnfuntion" title="Quản lý nhóm tài liệu/Document type management"><i class="fa fa-plus" style="color:#0094ff;font-size:24px;"></i></button>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Trạng thái/Status</label>
                                        <div class="controls">
                                            <select class="form-control" id="statusSearch">
                                                <option value="1">Hiển thị/Displayed</option>
                                                <option value="0">Không hiển thị/Not displayed</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Tên tài liệu/Document name<span class="required">*</span></label>

                                        <div class="controls">
                                            <input type="text" class="form-control" id="nameDocument">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Mô tả/Description</label>

                                        <div class="controls">
                                            <textarea class="form-control" maxlength="500" cols="5" id="desciptionDocument"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 no-padding">
                                <div class="col-12-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Tệp đính kèm/Attachment<span class="required">*</span></label>
                                        <div class="controls text-left">
                                            <input type="file" id="uploadFileDocument" uploader="uploader" multiple="" style="display:none;">
                                            <button type="button" class="btn btn-success btn-s" onclick="$('#uploadFileDocument').click()">
                                                <span class="glyphicon glyphicon-upload"></span> Chọn tệp/Choose file
                                            </button>
                                            <button type="button" class="btn btn-danger btn-s" onclick="DeleteFile()">
                                                <span class="glyphicon glyphicon-trash"></span> Xóa/Remove
                                            </button>
                                        </div>
                                        <span id="nameFile"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">

                                    <button onclick="CreateDocument(false)" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-save "></i> &nbsp; <span>Lưu/Save</span>
                                    </button>

                                    <a href="/Document/Index" class="btn btn-default btn-icon right10">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Hủy/Cancel</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<div id="modalDocumentType" class="modal fade" role="dialog" tabindex="-1" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog modal-sm" style="width:800px">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="h4Title">Quản lý nhóm tài liệu</h4>
            </div>
            <input type="hidden" id="ReportProfileId" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="input-icon icon-right">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                                    <label class="form-label">Tên nhóm tài liệu<span class="required">*</span></label>
                                                    <div class="controls">
                                                        <input type="text" class="form-control" id="nameDocumentType">
                                                    </div>
                                                </div>
                                                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 padding-top-20">
                                                    <button onclick="CreateDocumentType()" type="button" class="btn btn-success"><i class="fa fa-save" style="color:#FFF;font-size:16px;"></i>  Thêm mới</button>
                                                    <button onclick="UpdateDocumentType()" type="button" class="btn btn-success"><i class="fa fa-edit" style="color:#FFF;font-size:16px;"></i>  Cập nhật</button>
                                                </div>
                                            </div>
                                            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-6 text-left" style="margin-top:10px;">
                                                <h4>
                                                    Tất cả <b class="badge badge-primary" id="count_data"></b> nhóm tài liệu
                                                </h4>
                                            </div>
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ;">
                                                <div class="margin-bottom-10" id="list_data">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/ScriptControllers/DocumentCreateControllers.js"></script>
