@{
    ViewBag.Title = "Mẫu câu chuyện/Narrative templates";
    Layout = "~/Views/Shared/_Layout.cshtml";
} 
<section class="wrapper main-wrapper">
    <div ui-view="" class="">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm/Search</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Narrative template</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="titleSample">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Narrative category</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="typeSample">
                                            <option value="">Tất cả/All</option>
                                            <option value="1">Too young</option>
                                            <option value="2">Drop-out</option>
                                            <option value="3">Disability</option>
                                            <option value="4">Kindergarten</option>
                                            <option value="5">School age</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-5 col-xs-5 text-right">
                                <div class="form-group margin-top-20">
                                    <button class="btn btn-success btn-icon right10" onclick="Search()">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm/Search</span>
                                    </button>
                                    <button class="btn btn-default btn-icon right10" onclick="Refresh()">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới/Refresh</span>
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Narrative template checklist</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">

                        <div class="row margin-bottom-5">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <button  onclick="AddStoryTeplate()" class="btn btn-success">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Tạo mới/Add</span>
                                </button>
                            </div>
                        </div>
                        <div class="row" id="listStorySample"> 
                        </div> 

                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" /> 
                                <button class="btn btn-xs btnfuntion"><i class="material-icons btnicon" style="color:orange">edit</i></button>&nbsp;<small class="padding-right-20">Cập nhật/Update</small>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section> 
<div id="divFormStoryTemplate"> 
    @Html.Action("FormStoryTemplate", "StorySample") 
</div>

<script src="~/ScriptControllers/StorySampleController.js"></script>
<script>
    InitModel();
    window.onload = Search();
</script>
