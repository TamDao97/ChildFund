@{
    ViewBag.Title = "Cấu hình thông tin Trường học/ School infomation config";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm/Search </h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-6 col-md-3 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label class="form-label">Tên trường học</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch" autocomplete="off">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button onclick="Search()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm/Search</span>
                                    </button>
                                    <button onclick="Refresh()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới/Refresh</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách trường học/School checklist</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-md-3 col-sm-3 col-xs-3 text-left">
                                <h4>
                                    Tổng số trường học/Total number<b class="badge badge-primary" id="count_data"></b>
                                </h4>
                            </div>
                            <div class="col-md-9 col-sm-9 col-xs-9 text-right">
                                <button onclick="ShowModalCreate('create')" title="Thêm mới" class="btn btn-success btn-icon">
                                    <i class="fa fa-file-excel-o"></i> Thêm mới/Add
                                </button>
                                @*<a href="/SystemConfig/CreateSchool" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-plus"></i> &nbsp;<span> Thêm mới/Add</span>
                                    </a>*@
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="Cập nhật địa bàn/Update">
                                    <i class="material-icons btnicon" style="color:orange">edit</i>
                                </button>&nbsp;<small class="padding-right-20">Cập nhật trường học/Update</small>
                                <button class="btn btn-xs btnfuntion" title="Xóa địa bàn/Delete">
                                    <i class="material-icons btnicon" style="color:red">delete</i>
                                </button>&nbsp;<small class="padding-right-20">Xóa trường học/Delete</small>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/SystemConfig.js"></script>
<script>
    window.onload = Search();
</script>


<div class="row" id="modalContent">

</div>