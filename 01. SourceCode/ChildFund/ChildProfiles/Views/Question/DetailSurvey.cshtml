@model ChildProfiles.Model.Model.Question.SurveyModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left" id="h2title">Cập nhật khảo sát</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <form id="sFrom">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="margin-bottom-5 bold text-success">Thông tin khảo sát</h4>
                                    <hr />
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">Tên khảo sát</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" disabled class="form-control" maxlength="150" id="nameSurvey" value="@Model.Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-3">
                                        <div class="form-group">
                                            <label class="form-label">Thời gian bắt đầu</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" disabled value="@Model.StartDate" class="form-control datepicker" name="startDate" id="startDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-3">
                                        <div class="form-group">
                                            <label class="form-label">Thời gian kết thúc</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" disabled value="@Model.EndDate" class="form-control datepicker" name="endDate" id="endDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-2">
                                        <div class="form-group">
                                            <label class="form-label">Thứ tự</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" disabled class="form-control" maxlength="10" value="@Model.OrderNumber" id="orderNumber">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <h4 class="margin-bottom-5 bold text-success">Chủ đề và câu hỏi</h4>
                                    <hr />
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 no-padding" id="data-all">
                                    @Html.Action("GenGroupQuestionDetail", "Question", new { ListGroupQuestion = Model.ListGroupQuestion })
                                </div>
                               
                            </div>

                        </form>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-bottom-10 ">
                                 
                                    <a href="/Question/Index" class="btn btn-default btn-icon">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Thoát</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/QuestionDetailControllers.js"></script>
<script>
    window.onload = InitModel('@Model.Id');
</script>