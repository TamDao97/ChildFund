
@{
    ViewBag.Title = "Quản lý khảo sát";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Tên chủ đề</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Hạn từ ngày</label>
                                    <div class="controls">
                                        <input placeholder="Chọn ngày" id="dateFromSearch" type="text" class="form-control datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Đến ngày</label>
                                    <div class="controls">
                                        <input placeholder="Chọn ngày" id="dateToSearch" type="text" class="form-control datepicker">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button onclick="Search()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button onclick="Refresh()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách khảo sát </h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                                <h4>
                                    Tổng số <b class="badge badge-primary" id="count_data"></b> khảo sát
                                </h4>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                                <a href="/Question/CreateSurvey" class="btn btn-success btn-icon right10">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Thêm mới</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="Cập nhật khảo sát">
                                    <i class="material-icons btnfuntion" style="color:orange">edit</i>
                                </button>&nbsp;
                                <small class="padding-right-20">Cập nhật khảo sát</small>
                                <button class="btn btn-xs btnfuntion" title="Xóa khảo sát">
                                    <i class="material-icons btnfuntion" style="color:red">delete</i>
                                </button>&nbsp;
                                <small class="padding-right-20">Xóa khảo sát</small>
                                <button class="btn btn-xs btnfuntion" title="Chi tiết khảo sát">
                                    <i class="material-icons btnicon" style="color:#26C6DA">info</i>
                                </button>&nbsp;
                                <small class="padding-right-20">Chi tiết khảo sát</small>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/QuestionListControllers.js"></script>
<script>
    window.onload = Search();
</script>