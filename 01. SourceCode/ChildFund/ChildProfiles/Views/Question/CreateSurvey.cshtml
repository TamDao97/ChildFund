@{
    var dateNow = DateTime.Now;
    var dateFrom = dateNow.Day.ToString("D2") + "/" + dateNow.Month.ToString("D2") + "/" + dateNow.Year;
    dateNow.AddMonths(1);
   var dateTo = dateNow.Day.ToString("D2") + "/" + dateNow.Month.ToString("D2") + "/" + dateNow.Year;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left" id="h2title">Thêm mới khảo sát</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <form id="sFrom">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4 class="margin-bottom-5 bold text-success">Thông tin khảo sát</h4>
                                    <hr />
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">Tên khảo sát</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" class="form-control" maxlength="150" id="nameSurvey">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-3">
                                        <div class="form-group">
                                            <label class="form-label">Thời gian bắt đầu</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="hidden" value="@dateFrom" id="hid_dateFrom" />
                                                <input type="text" value="@dateFrom" class="form-control datepicker" name="startDate" id="startDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-3">
                                        <div class="form-group">
                                            <label class="form-label">Thời gian kết thúc</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="hidden" value="@dateTo" id="hid_dateTo" />
                                                <input type="text"  value="@dateTo" class="form-control datepicker" name="endDate" id="endDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-2">
                                        <div class="form-group">
                                            <label class="form-label">Thứ tự</label>&nbsp;<span class="required">*</span>
                                            <div class="controls">
                                                <input type="text" class="form-control" maxlength="10" id="orderNumber">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <h4 class="margin-bottom-5 bold text-success">Chủ đề và câu hỏi</h4>
                                    <hr />
                                </div>
                                <div class="col-md-11 col-sm-11 col-xs-11 no-padding" id="data-all">
                                    @Html.Action("GenGroupQuestion", "Question")
                                </div>
                                <div class="col-md-1 col-sm-1 col-xs-1 no-padding">
                                    <button onclick="AddSurvey()" type="button" class="btn btn-xs btnfuntion" title="Thêm khảo sát"><i class="material-icons btnicon" style="color:red">library_add</i></button>
                                </div>
                            </div>

                        </form>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-bottom-10 ">
                                    <button onclick="Create(false)" id="btn-create" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-save "></i> &nbsp; <span>Lưu</span>
                                    </button>
                                    <a href="/Question/Index" class="btn btn-default btn-icon">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Thoát</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<script src="~/ScriptControllers/QuestionCreateControllers.js"></script>