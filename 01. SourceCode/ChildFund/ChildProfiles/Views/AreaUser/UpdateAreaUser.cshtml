@model ChildProfiles.Model.AreaUser.AreaUserModel
@{
    ViewBag.Title = "Cập nhật địa bàn/Update area";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Cập nhật địa bàn/Update area</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="margin-bottom-5 bold text-success">Thông tin địa bàn/Area's information</h4>
                                <hr />
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <div class="form-group">
                                        <label class="form-label">Tên địa bàn/Area name</label>&nbsp;<span class="required">*</span>
                                        <div class="controls">
                                            <input type="text" maxlength="150" value="@Model.Name" class="form-control" id="areaUserName">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">Người quản lý/Manager</label>
                                        <div class="controls">
                                            <input type="text" maxlength="200" value="@Model.Manager" class="form-control" id="areaUserManagers">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">Tỉnh/Thành/Province</label>
                                        <div class="controls">
                                            <select class="form-control" id="areaUserProvinceId" onchange="GetDistrict()">
                                                @Html.Action("ProvinceCBB", "Combobox");
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-2">
                                    <div class="form-group">
                                        <label class="form-label">Trạng thái/Status</label>
                                        <div class="controls">
                                            <label class="iswitch bg-accent">
                                                <input type="checkbox" checked="checked" id="areaUserStatus"> <i></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Mô tả/Description</label>
                                        <div class="controls">
                                            <textarea class="form-control" maxlength="500" rows="3" id="descriptionStatus">@Model.Description</textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-4 col-sm-4 col-xs-4">

                                <div class="row">
                                    <div class="col-md-12">
                                        <h4 class="margin-bottom-5 bold text-success"> Thông tin Huyện/District's information</h4>
                                        <hr />
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <table class="table table-bordered table-hover table-custom">
                                            <tbody id="data_District"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4 class="margin-bottom-5 bold text-success"> Thông tin Xã/Commune's information</h4>
                                        <hr />
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <table class="table table-bordered table-hover table-custom">
                                            <tbody id="data_Ward"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4 class="margin-bottom-5 bold text-success"> Thông tin Thôn Xóm/Village's information</h4>
                                        <hr />
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="input-group" inputgroup="">
                                            <input id="txtVillageName" type="text" class="form-control" placeholder="Tên thôn/xóm/ Village name">
                                            <input type="hidden" id="txtVillageId" />
                                            <input type="hidden" id="txtWardId" />
                                            <span class="input-group-addon btn-success padding-left-10 padding-right-10" onclick="SaveVillage()" style="color:#fff;cursor:pointer;">Lưu/SAve</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12" id="data_Village">

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-bottom-10 ">

                                    <button class="btn btn-success btn-icon" onclick="Update()">
                                        <i class="fa fa-save "></i> &nbsp; <span>Lưu/Save</span>
                                    </button>
                                    <a href="/AreaUser/Index" class="btn btn-default btn-icon right10">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Thoát/Exit</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<input type="hidden" value="@ViewBag.data" id="objModel" />
<script src="~/ScriptControllers/AreaUserUpdateControllers.js"></script>
<script>
    window.onload = InitModel($('#objModel').val());
</script>

