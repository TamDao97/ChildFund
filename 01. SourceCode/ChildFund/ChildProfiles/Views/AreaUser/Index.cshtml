@{
    ViewBag.Title = "Quản lý địa bàn/ADO management ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm/Search </h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">

                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">Tên địa bàn/Area name</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">Người quản lý/Manager</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="managerSearch">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">Trạng thái/Status</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="">Tất cả/All</option>
                                            <option value="1">Hoạt động/Active</option>
                                            <option value="0">Ngừng hoạt động/Inactive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button onclick="Search()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm/Search</span>
                                    </button>
                                    <button onclick="Refresh()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới/Refresh</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách địa bàn hoạt động/List areas</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">

                                <a href="/AreaUser/CreateAreaUser" class="btn btn-success btn-icon right10">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Thêm mới/Add</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="Cập nhật địa bàn/Update">
                                    <i class="material-icons btnicon" style="color:orange">edit</i>
                                </button>&nbsp;<small class="padding-right-20">Cập nhật địa bàn/Update</small>
                                <button class="btn btn-xs btnfuntion" title="Xóa địa bàn/Delete">
                                    <i class="material-icons btnicon" style="color:red">delete</i>
                                </button>&nbsp;<small class="padding-right-20">Xóa địa bàn/Delete</small>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/AreaUserListControllers.js"></script>
<script>
    window.onload = Search();
</script>
