@{
    ViewBag.Title = "Báo cáo cập nhật thông tin trẻ/Child information report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm/Search</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">MST/Child number</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>


                            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Ngày từ/From</label>
                                    <div class="controls">
                                        <input id="dateFromSearch"  type="text" class="form-control datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Đến ngày/To</label>
                                    <div class="controls">
                                        <input id="dateToSearch"  type="text" class="form-control datepicker">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Người tạo/Created by</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="createBySearch">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">Trạng thái/Status</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="">Tất cả/All</option>
                                            <option value="1">Đã duyệt/Approved</option>
                                            <option value="0">Chưa duyệt/Not approved</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12  col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button onclick="Search()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm/Search</span>
                                    </button>
                                    <button onclick="Refresh()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới/Refresh</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="col-lg-12 col-md-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách báo cáo cập nhật thông tin trẻ/Checklist</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row margin-bottom-5">
                            <div class="col-md-9 col-sm-9 col-xs-9 text-left">
                                <h4>
                                    Tổng số báo cáo/Total number <b class="badge badge-primary" id="count_data"></b>
                                </h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">

                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="Duyệt báo cáo/Approve"><i class="material-icons btnicon" style="color:limegreen">assignment_turned_in</i></button>&nbsp;<small class="padding-right-20">Duyệt báo cáo/Approve</small>
                                <button class="btn btn-xs btnfuntion" title="Đính kèm file/Attach file"><i class="material-icons btnicon" style="color:aquamarine">attach_file</i></button>&nbsp;<small class="padding-right-20">Đính kèm file/Attach file</small>
                                <button class="btn btn-xs btnfuntion" title="Chi tiết hồ sơ/View detail">
                                    <i class="material-icons btnicon" style="color:mediumaquamarine">assignment_ind</i>
                                </button>&nbsp;<small class="padding-right-20">Chi tiết hồ sơ/View detail</small>
                                <button class="btn btn-xs btnfuntion" title="Tải file"><i class="material-icons btnicon" style="color:orange">get_app</i></button>&nbsp;<small class="padding-right-20">Tải file/Download</small>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<div id="modamConfim" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog" style="width:500px">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="h4Title">Cảnh báo xác nhận/Confirmation</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="form-label" id="labelConfim"></label>
                            <label class="form-label">ADO remarks:</label>
                            <div class="controls">
                                <textarea class="form-control" cols="5" id="inputText"></textarea>
                                <input type="hidden" id="valueConfim" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="Confim()" class="btn btn-primary" id="btn-createContinue"><i class="glyphicon glyphicon-floppy-save"></i> Đồng ý/OK</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát/Exit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modamAttach" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog" style="width:550px">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="h4Title">Đính kèm file/Attach file</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div class="controls ">
                                <button type="button" class="btn btn-success btn-s" onclick="uploadFile()" style="padding:4px 6px">
                                    <span class="glyphicon glyphicon-upload "></span> Chọn file/Choose file
                                </button>
                            </div>
                            <input type="file" accept="*" id="FileUpload" multiple style="display:none" />
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <div class="row" id="divFileOld">
                        </div><br />
                        <div class="row" id="divFile">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="UploadAttachFile()" class="btn btn-primary" id="btn-createContinue"><i class="glyphicon glyphicon-floppy-save"></i>Lưu file/Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát/Exit</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modalDetail" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog" style="width:60%">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="CloseModalDetail()">&times;</button>
                <h4 class="h4Title" id="titleModal">Chi tiết hồ sơ/Profile's details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-9 col-sm-9 col-xs-9 ">

                        <table class="table table-bordered table-hover">
                            <thead>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <label>Mã chương trình/Program code: </label>
                                    </td>
                                    <td><span id="txtMaChuongTrinh"></span></td>

                                    <td>
                                        <label>Mã số trẻ/Child Number: </label>
                                    </td>
                                    <td> <span id="txtMaSoTre"></span></td>
                                </tr>
                                <tr>
                                    <td><label>Tên trẻ/Child's name: </label></td>
                                    <td> <span id="txtTenTre"></span></td>
                                    <td>
                                        <label>Giới tính/Gender: </label>
                                    </td>
                                    <td> <span id="txtGioiTinh"></span></td>

                                </tr>
                                <tr>
                                    <td>
                                        <label>Ngày sinh/Date of birth: </label>
                                    </td>
                                    <td><span id="txtNgaySinh"></span></td>
                                    <td>
                                        <label>Trường học/School: </label>
                                    </td>
                                    <td><span id="txtSchool"></span></td>

                                </tr>
                                <tr>
                                    <td>
                                        <label>Họ tên bố/Father's name: </label>
                                    </td>
                                    <td> <span id="txtFa"></span></td>
                                    <td>
                                        <label>Họ tên mẹ/Mother's name: </label>
                                    </td>
                                    <td><span id="txtMo"></span></td>
                                </tr>

                                <tr>
                                    <td>
                                        <label>Xã/Commune: </label>
                                    </td>
                                    <td><span id="txtWardId"></span></td>
                                    <td>
                                        <label>Thôn xóm/Village: </label>
                                    </td>
                                    <td><span id="txtVillageName"></span></td>
                                </tr>
                                <tr>
                                    <td colspan="4">
                                        <label>Nội dung/Content</label>
                                        <p id="noteDetail"></p>
                                    </td>
                                </tr>

                                <tr>
                                    <td colspan="4">
                                        <label>Ghi chú/Note</label>
                                        <p id="descriptionDetail"></p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-3 no-padding">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <label>Ảnh đại diện/Avatar</label>
                                </span>
                                <div class="controls text-center margin-top-10">
                                    <img id="imgPreview" src="~/img/avatar.png" style="width:100%;height:auto;">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="CloseModalDetail()"><i class="glyphicon glyphicon-minus-sign"></i> Thoát/Exit</button>
            </div>
        </div>
    </div>
</div>
<script src="~/ScriptControllers/ReportProfileListWardControllers.js"></script>
<script>
    window.onload = Search();
</script>
