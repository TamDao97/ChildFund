@{
    Layout = "~/Views/Shared/_LayoutAuthorize.cshtml";
}
<style>
    input[type="text"]{
        padding-left:10px;
    }
</style>
<div class="content" id="authorize">
    <h2 style="font-size:18px;font-weight:700">Cấp lại mật khẩu/Renew password</h2>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <label class="form-label">Tên đăng nhập/Account <span class="required">*</span></label>
                <div class="controls">
                    <input type="text" class="form-control" id="ForwardPassword_UserName" ntsvalidate="required">
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group">
                <label class="form-label">Email xác nhận/Email <span class="required">*</span></label>
                <div class="controls">
                    <input type="text" class="form-control" id="ForwardPassword_Email" ntsvalidate="required">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <input type="button" id="btnForwardPassword" value="TIẾP THEO/NEXT">
        </div>
    </div>
</div>
