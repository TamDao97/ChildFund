@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string level = ViewBag.UserLever;
    if (level == null)
    {
        level = "";
    }
}
@model IList<ChildProfiles.Model.Entity.ImageChildByYear>
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                    </header>
                    <div class="container">
                        <div class="row" id="divListImage">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                        <label class="icheck icheck-primary">
                                            <input type="checkbox" value="@item.Id">
                                            <i></i>
                                        </label><span style="font-weight: bold;">@item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                        <a class="thumbnail" href="#" data-image-id="" data-toggle="modal" data-title="@item.CreateDate.Value.ToString("dd/MM/yyyy HH:mm")"
                                           data-image="@item.ImageUrl"
                                           data-target="#image-gallery">
                                            <img class="img-thumbnail"
                                                 src="@item.ImageThumbnail">
                                        </a>
                                    </div>
                                }
                            </div>
                            @if (Model != null && Model.Count > 0)
                            {
                                <div class="row padding-10">
                                    <div class="col-md-11 col-sm-11 col-xs-11 text-right">
                                        <button class="btn btn-xs btnfuntion" onclick="DownLoadImage('@ViewBag.ItemUploadId')">
                                            <i class="fa fa-remove"></i> &nbsp; <span>Tải ảnh/Download</span>
                                        </button>
                                        @if (level.Equals("3"))
                                        {
                                            <button class="btn btn-xs btnfuntion" onclick="DeleteConfim('@ViewBag.ItemUploadId')">
                                                <i class="fa fa-remove"></i> &nbsp; <span>Xóa ảnh/Delete</span>
                                            </button>
                                        }
                                        <a href="/ProfileNew/ProfileConfim" class="btn btn-xs btnfuntion">
                                            <i class="fa fa-power-off"></i> &nbsp; <span>Thoát/Exit</span>
                                        </a>
                                    </div>
                                </div>
                            }
                            <div class="modal fade" id="image-gallery" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" style="margin-top:auto">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="image-gallery-title"></h4>
                                            <button type="button" class="close" data-dismiss="modal" style="margin-top:-15px; margin-right:-25px">
                                                <span aria-hidden="true">×</span><span class="sr-only">Close</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <img id="image-gallery-image" class="img-responsive col-md-12" src="">
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary float-left" id="show-previous-image">
                                                <i class="fa fa-arrow-left"></i>
                                            </button>
                                            <button type="button" id="show-next-image" class="btn btn-secondary float-right">
                                                <i class="fa fa-arrow-right"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </section>
            </div>
        </div>
    </div>
</section>
<div id="myModalImage" class="modal">
    <span class="close" onclick="CloseModelImage()">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>
<script src="~/ScriptControllers/ViewImageByYear.js"></script>
<link href="~/Content/modelImage.css" rel="stylesheet" />
<style>
    .modal-title {
        color: white !important
    }

    .modal-header .close {
        margin-top: -3px !important
    }
</style>