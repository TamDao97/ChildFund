@{
    ViewBag.Title = "Quản lý tài liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Tìm kiếm </h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">

                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Nhóm tài liệu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="documentTyeid">
                                            <option value="">Tất cả</option>
                                            @Html.Action("DocumentTyeCBB", "Combobox");
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Tên tài liệu</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label">Mô tả tài liệu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="description">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Báo cáo từ ngày</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadFrom">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Đến ngày</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadTo">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label">Trạng thái</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="">Tất cả</option>
                                            <option value="1">Hiển thị</option>
                                            <option value="0">Không hiển thị</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label">Người upload</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="uploadby">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button onclick="SearchDocument()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button onclick="RefreshListDocument()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách tài liệu</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-md-9 col-sm-9 col-xs-9 text-left">
                                <h4>
                                    Tổng số <b class="badge badge-primary" id="count_data"></b> tài liệu
                                </h4>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 text-right">

                                <a href="/Document/CreateDocument" class="btn btn-success btn-icon right10">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Thêm mới</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="Cập nhật tài liệu">
                                    <i class="material-icons btnicon" style="color:orange">edit</i>
                                </button>&nbsp;<small class="padding-right-20">Cập nhật tài liệu</small>
                                <button class="btn btn-xs btnfuntion" title="Xóa tài liệu">
                                    <i class="material-icons btnicon" style="color:red">delete</i>
                                </button>&nbsp;<small class="padding-right-20">Xóa tài liệu</small>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/DocumentListControllers.js"></script>
<script>
    window.onload = SearchDocument();
</script>
