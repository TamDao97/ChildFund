@using InformationHub.Model;
@model UserModel
@{
    ViewBag.Title = InformationHub.Resource.Resource.User_Add_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.User_Info</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-md-9 col-sm-9 col-xs-9 no-padding">
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.User_Acc</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Name</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Birthday</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.ReportProfile_Gender</label>
                                        <div class="controls">
                                            <div class="radio">
                                                <label class="icheck icheck-primary">
                                                    @Html.RadioButtonFor(m => m.Gender, "0", new { @ntsvalidate = "required" })
                                                    <i></i> @InformationHub.Resource.Resource.ReportProfile_Male
                                                </label>&nbsp;
                                                <label class="icheck icheck-accent">
                                                    @Html.RadioButtonFor(m => m.Gender, "1")
                                                    <i></i> @InformationHub.Resource.Resource.ReportProfile_FeMale
                                                </label>&nbsp;
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Email</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Phone_Title</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.ReportProfile_Address</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.User_Type</label>
                                        <div class="controls">
                                            <select class="form-control" id="userType">
                                                <option selected value="0">@InformationHub.Resource.Resource.GroupUser_Type_Admin</option>
                                                <option value="1">@InformationHub.Resource.Resource.GroupUser_Type_Province</option>
                                                <option value="2">@InformationHub.Resource.Resource.GroupUser_Type_District</option>
                                                <option value="3">@InformationHub.Resource.Resource.GroupUser_Type_Ward</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Area_Province</label>
                                        <select class="form-control" id="provinceId" onchange="GetDistrict()">
                                            <option value=""></option>
                                            @Html.Action("ProvinceCBB", "Combobox")
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_District</label>
                                        <select class="form-control" id="districtId" onchange="GetWard()"></select>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-3">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Ward</label>
                                        <select class="form-control" id="wardId"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 no-padding">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Avatar</label>

                                        <div class="controls text-center">
                                            <button type="button" class="btn btn-success btn-s" ng-click="uploader.uploadAll()">
                                                <span class="glyphicon glyphicon-upload"></span> @InformationHub.Resource.Resource.Label_Upload
                                            </button>
                                            <button type="button" class="btn btn-danger btn-s" ng-click="uploader.clearQueue()">
                                                <span class="glyphicon glyphicon-trash"></span> @InformationHub.Resource.Resource.Delete_Title
                                            </button>
                                        </div>
                                        <div class="controls text-center margin-top-10">
                                            <img src="~/img/logo.png">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box margin-top-0">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.GroupUser_Permission_Acc</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row margin-bottom-5">
                            <div class="col-md-6 col-sm-6 col-xs-6 text-left">
                                <div class="col-md-2 col-sm-2 col-xs-2 no-padding">
                                    <label class="form-label padding-top-10">@InformationHub.Resource.Resource.GroupUser_Group</label>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6 no-padding">
                                    <div class="form-group">
                                        <select class="form-control" id="groupUserId" onchange="GetGroupUser()">
                                            @Html.Action("GroupUserCBB", "Combobox")
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                                <h4>
                                    @InformationHub.Resource.Resource.Total_Title <b class="badge badge-primary" id="count_data"></b> @InformationHub.Resource.Resource.GroupUser (<span class="text-primary">Đã chọn: <b>3</b></span> - <span class="text-danger">Chưa chọn: <b>7</b></span>)
                                </h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th width="50px">@InformationHub.Resource.Resource.Index_Title</th>
                                                <th>@InformationHub.Resource.Resource.GroupUser_Permission_Code</th>
                                                <th>@InformationHub.Resource.Resource.GroupUser_Permission_Name</th>
                                                <th width="60px">
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">1</th>
                                                <td>QL0001</td>
                                                <td>Quản lý hồ sơ</td>
                                                <td>
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">2</th>
                                                <td>QL0002</td>
                                                <td>Cập nhật hồ sơ</td>
                                                <td>
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">3</th>
                                                <td>QL0003</td>
                                                <td>Xóa hồ sơ</td>
                                                <td>
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">4</th>
                                                <td>QL0004</td>
                                                <td>Quản lý người dùng</td>
                                                <td>
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">5</th>
                                                <td>QL0005</td>
                                                <td>Quản lý nhóm quyền</td>
                                                <td>
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" value="" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-bottom-10 ">
                                    <button class="btn btn-success btn-icon" onclick="Create(false)">
                                        <i class="fa fa-save "></i> &nbsp; <span>Lưu</span>
                                    </button>
                                    <button class="btn btn-success btn-icon" onclick="Create(true)">
                                        <i class="glyphicon glyphicon-floppy-save"></i> &nbsp; <span>Lưu và tiếp tục</span>
                                    </button>

                                    <button class="btn btn-default btn-icon">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Thoát</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/controller/CreateUserController.js"></script>