@{
    ViewBag.Title = InformationHub.Resource.Resource.GroupUser_Add_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.GroupUser_Add_Title</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.GroupUser_Code</label>&nbsp;<span class="required">*</span>

                                    <div class="controls">
                                        <input type="text" class="form-control" id="groupUserCode">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.GroupUser_Name</label>&nbsp;<span class="required">*</span>

                                    <div class="controls">
                                        <input type="text" class="form-control" id="Name">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Label_Description</label>

                                    <div class="controls">
                                        <input type="text" class="form-control" id="Description">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-3">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Label_Status</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="1">@InformationHub.Resource.Resource.Label_Status_Active</option>
                                            <option value="0">@InformationHub.Resource.Resource.Label_Status_DeActive</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box margin-top-20">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.GroupUser_Permission_Acc</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row margin-bottom-5">
                            <div class="col-lg-9 col-md-8 col-sm-8 col-xs-8 text-left">
                                <div class="col-lg-3 col-md-5 col-sm-4 col-xs-4 no-padding">
                                    <label class="form-label padding-top-10">@InformationHub.Resource.Resource.GroupUser_Type</label>&nbsp;<span class="required">*</span>
                                </div>
                                <div class="col-lg-3 col-md-5 col-sm-5 col-xs-5 no-padding">
                                    <div class="controls">
                                        <select class="form-control" id="type" onchange="GetAllPermission()">
                                            <option value="0">@InformationHub.Resource.Resource.GroupUser_Type_Admin</option>
                                            <option value="1">@InformationHub.Resource.Resource.GroupUser_Type_Province</option>
                                            <option value="2">@InformationHub.Resource.Resource.GroupUser_Type_District</option>
                                            <option value="3">@InformationHub.Resource.Resource.GroupUser_Type_Ward</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4 text-right">
                                <h4 class="padding-top-10">
                                    @InformationHub.Resource.Resource.Total_Title <b class="badge badge-primary" id="count_data"></b> @InformationHub.Resource.Resource.GroupUser
                                </h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th width="60px" class="text-center">@InformationHub.Resource.Resource.Index_Title</th>
                                                <th class="text-center">@InformationHub.Resource.Resource.GroupUser_Permission_Code</th>
                                                <th class="text-center">@InformationHub.Resource.Resource.GroupUser_Permission_Name</th>
                                                <th width="50px" class="text-center">
                                                    <label class="icheck icheck-primary">
                                                        <input type="checkbox" onchange="CheckAllPermission()" id="checkAllData" />
                                                        <i></i>
                                                    </label>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody id="list_data"></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-bottom-10 ">
                                    <button type="button" onclick="CreateGroupUser(false)" class="btn btn-primary" id="btn-create">
                                        <i class="glyphicon glyphicon-floppy-save"></i>@InformationHub.Resource.Resource.Save_Title
                                    </button>
                                    <button type="button" onclick="CreateGroupUser(true)" class="btn btn-primary" id="btn-createContinue">
                                        <i class="glyphicon glyphicon-floppy-save"></i>@InformationHub.Resource.Resource.SaveAndContinue_Title
                                    </button>
                                    <a class="btn btn-default btn-icon" href="/Groupuser/index">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>@InformationHub.Resource.Resource.Exit_Title</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/CreateGroupUser.js"></script>
<script>
    window.onload = GetAllPermission();
</script>
