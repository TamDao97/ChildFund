@model IList<InformationHub.Model.StatisticModels.HomeChartItemModel>
@{
                /**/

                Layout = "~/Views/Shared/_Layout.cshtml";
                ViewBag.Title = "ReportWard";
                var listCount = (List<InformationHub.Model.StatisticModels.HomeProvinceItemModel>)ViewBag.listCount;
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thống kê trường hợp</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Tìm kiếm trong</label>
                                    <div class="controls">
                                        <div class="radio" id="divType">
                                            <label class="icheck icheck-primary">
                                                <input type="radio" value="1" name="sgroupType">
                                                <i></i> Tháng
                                            </label>&nbsp;
                                            <label class="icheck icheck-primary">
                                                <input type="radio" value="2" checked name="sgroupType">
                                                <i></i> Quý
                                            </label>&nbsp;
                                            <label class="icheck icheck-primary">
                                                <input type="radio" value="3" name="sgroupType">
                                                <i></i> Năm
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" id="divMonth" style="display:none">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Tháng</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="sMonth">
                                            @for (int i = 1; i < 13; i++)
                                            {
                                                <option value="@i">Tháng @i</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" id="divQuatar">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Quý</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="sQuatar">
                                            @for (int i = 1; i < 5; i++)
                                            {
                                                <option value="@i">Quý @i</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Năm</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="sYear">
                                            @for (int i = 2017; i < 2030; i++)
                                            {
                                                <option value="@i">Năm @i</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" id="divTemp" style="display:none">
                            </div>
                            <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button class="btn btn-success btn-icon right10" type="button" onclick="SearchChart()">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                <section class="box margin-top-0">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thống kê theo giới tính</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div id="containerGioitinh" style="min-width: 310px; height: 430px; margin: 0 auto"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12" style="width:100%;overflow-x:auto">
                                <h4 class=" margin-top-10 margin-bottom-10">Danh sách</h4>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr id="tableHeaderRight"></tr>
                                    </thead>
                                    <tbody id="tableRight"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/ReportWardControllers.js"></script>