@{
    ViewBag.Title = @InformationHub.Resource.Resource.Statistic_Gender;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box collapsed">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Search_Title</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <div class="controls">
                                                <label class="form-label">@InformationHub.Resource.Resource.DayFrom_Title</label>
                                                <input placeholder="@InformationHub.Resource.Resource.Label_Date" id="dateFromSearch" type="text" class="form-control datepicker" value="01/01/@ViewBag.dateTimeNow.Year">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.ReportProfile_DateTo</label>
                                            <div class="controls">
                                                <input placeholder="@InformationHub.Resource.Resource.Label_Date" id="dateToSearch" type="text" class="form-control datepicker" value="@ViewBag.dateTimeNow.ToString("dd/MM/yyyy")">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (ViewBag.Type == "2")
                            {
                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_Ward</label>
                                            <select class="form-control" id="wardId"></select>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Type == "1")
                            {
                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_District</label>
                                            <select class="form-control" id="districtId" onchange="GetWardByUser()"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_Ward</label>
                                            <select class="form-control" id="wardId"></select>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Type == "0")
                            {
                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Area_Province</label>
                                            <select class="form-control" id="provinceId" onchange="GetDistrictByUser()">
                                                <option value="">Tất cả</option>
                                                @Html.Action("ProvinceCBB", "Combobox")
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_District</label>
                                            <select class="form-control" id="districtId" onchange="GetWardByUser()"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_Ward</label>
                                            <select class="form-control" id="wardId"></select>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (ViewBag.Type =="3")
                            {
                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7 text-right">
                                    <div class="form-group margin-top-20">
                                        <button onclick="Search(0, '@ViewBag.provinceId', '@ViewBag.districtId', '@ViewBag.wardId', '@ViewBag.type')" class="btn btn-success btn-icon right10">
                                            <i class="fa fa-search"></i> &nbsp; <span>@InformationHub.Resource.Resource.Search_Title</span>
                                        </button>
                                        <button onclick="Refresh('@ViewBag.wardId', '@ViewBag.districtId', '@ViewBag.provinceId', '@ViewBag.dateTimeNow.ToString("dd/MM/yyyy")', '@ViewBag.dateTimeNow.Year')" class="btn btn-default btn-icon">
                                            <i class="fa fa-refresh"></i> &nbsp; <span>@InformationHub.Resource.Resource.Reset_Title</span>
                                        </button>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                    <div class="form-group margin-top-20">
                                        <button onclick="Search(0, '@ViewBag.provinceId', '@ViewBag.districtId', '@ViewBag.wardId', '@ViewBag.type')" class="btn btn-success btn-icon right10">
                                            <i class="fa fa-search"></i> &nbsp; <span>@InformationHub.Resource.Resource.Search_Title</span>
                                        </button>
                                        <button onclick="Refresh('@ViewBag.wardId', '@ViewBag.districtId', '@ViewBag.provinceId', '@ViewBag.dateTimeNow.ToString("dd/MM/yyyy")', '@ViewBag.dateTimeNow.Year')" class="btn btn-default btn-icon">
                                            <i class="fa fa-refresh"></i> &nbsp; <span>@InformationHub.Resource.Resource.Reset_Title</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <div class="col-lg-12 col-md-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">
                        @InformationHub.Resource.Resource.Report_Statistic_Title
                    </h2>
                    <div class="actions panel_actions pull-right">
                        <i class="box_toggle material-icons">expand_more</i>
                    </div>
                </header>
                <div class="content-body padding-bottom-10">
                    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                        <a href="#" id="linkDowload"></a>
                        <button class="btn btn-info btn-icon right10" type="button" onclick="Search(1, '@ViewBag.provinceId', '@ViewBag.districtId', '@ViewBag.wardId', '@ViewBag.type')">
                            <i class="fa fa-file-excel-o"></i> &nbsp; <span>@InformationHub.Resource.Resource.Export_Title</span>
                        </button>
                        <button class="btn btn-warning btn-icon right10" type="button" onclick="Search(2, '@ViewBag.provinceId', '@ViewBag.districtId', '@ViewBag.wardId', '@ViewBag.type')">
                            <i class="fa fa-file-pdf-o"></i> &nbsp; <span>@InformationHub.Resource.Resource.ExportPDF_Title</span>
                        </button>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12" style="width:100%;overflow-x:auto">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div id="titleLeftChart" class="text-center bold"></div>
                                <div id="genderChart" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <h4 class="margin-top-10 margin-bottom-10">@InformationHub.Resource.Resource.Statistic_Title</h4>
                                <table class="table table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>@InformationHub.Resource.Resource.ReportProfile_AbuseType</th>
                                            <th class="text-center">@InformationHub.Resource.Resource.ReportProfile_Male</th>
                                            <th class="text-center">@InformationHub.Resource.Resource.ReportProfile_FeMale</th>
                                            <th class="text-center">@InformationHub.Resource.Resource.ReportProfile_Unknow</th>
                                        </tr>
                                    </thead>
                                    <tbody id="data_table"></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>

<script src="~/ScriptControllers/StatisticByGenderController.js"></script>
<script>
    window.onload = SearchInit('@ViewBag.wardId', '@ViewBag.districtId', '@ViewBag.provinceId', '@ViewBag.dateTimeNow.ToString("dd/MM/yyyy")', '@ViewBag.dateTimeNow.Year');
</script>