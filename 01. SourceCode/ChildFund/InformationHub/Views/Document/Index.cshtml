@{
    ViewBag.Title = InformationHub.Resource.Resource.Document_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box collapsed">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Search_Title</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Document_Group</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="documentTyeid">
                                            <option value="">@InformationHub.Resource.Resource.All_Title</option>
                                            @Html.Action("DocumentTyeCBB", "Combobox");
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Document_Name</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="nameSearch">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Label_Description</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="description">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">@InformationHub.Resource.Resource.DayFrom_Title</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadFrom">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">@InformationHub.Resource.Resource.DayTo_Title</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control datepicker" id="uploadTo">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Label_Status</label>
                                    <div class="controls">
                                        <select class="form-control" id="statusSearch">
                                            <option value="">@InformationHub.Resource.Resource.All_Title</option>
                                            <option value="1">@InformationHub.Resource.Resource.Label_Display</option>
                                            <option value="0">@InformationHub.Resource.Resource.Label_Not_Display</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label">@InformationHub.Resource.Resource.Document_Upload_By</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="uploadby">
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-8 col-sm-8 col-xs-12 text-right">
                                <div class="form-group margin-top-10">
                                    <button onclick="SearchDocument()" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>@InformationHub.Resource.Resource.Search_Title</span>
                                    </button>
                                    <button onclick="RefreshListDocument()" class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>@InformationHub.Resource.Resource.Reset_Title</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Document_List</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row margin-bottom-5">
                            <div class="col-lg-9 col-md-9 col-sm-6 col-xs-6 text-left">
                                <h4>
                                    @InformationHub.Resource.Resource.Total_Title <b class="badge badge-primary" id="count_data"></b> @InformationHub.Resource.Resource.Document
                                </h4>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 text-right">
                                @if (InformationHub.Common.LoginCommon.CheckPermission("C0022"))
                                {
                                    <a href="/Document/CreateDocument" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-plus"></i> &nbsp; <span>@InformationHub.Resource.Resource.Add_Title</span>
                                    </a>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="list_data">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button class="btn btn-xs btnfuntion" title="@InformationHub.Resource.Resource.Document_Update">
                                    <i class="material-icons btnicon" style="color:orange">edit</i>
                                </button>&nbsp;<small class="padding-right-20">@InformationHub.Resource.Resource.Document_Update</small>
                                <button class="btn btn-xs btnfuntion" title="@InformationHub.Resource.Resource.Document_Delete">
                                    <i class="material-icons btnicon" style="color:red">delete</i>
                                </button>&nbsp;<small class="padding-right-20">@InformationHub.Resource.Resource.Document_Delete</small>
                                <button class="btn btn-xs btnfuntion" title="@InformationHub.Resource.Resource.Label_Download">
                                    <i class="material-icons btnicon" style="color:#337ab7">file_download</i>
                                </button>&nbsp;<small class="padding-right-20">@InformationHub.Resource.Resource.Label_Download</small>
                            </div>
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/DocumentListControllers.js"></script>
<script>
    window.onload = SearchDocument();
</script>
