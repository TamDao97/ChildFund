@model InformationHub.Model.Model.Document.DocumentLibraryModel
@{
    ViewBag.Title = InformationHub.Resource.Resource.Document_Update;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Document_Update</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-8 col-md-7 col-sm-6 col-xs-12 no-padding">

                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Description</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="documentTyeid">
                                                @Html.Action("DocumentTyeCBB", "Combobox");
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Status</label>
                                        <div class="controls">
                                                <select class="form-control" id="statusSearch">
                                                    <option value="1">@InformationHub.Resource.Resource.Label_Display</option>
                                                    <option value="0" selected>@InformationHub.Resource.Resource.Label_Not_Display</option>
                                                </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Document_Name<span class="required">*</span></label>

                                        <div class="controls">
                                            <input type="text" class="form-control" id="nameDocument" value="@Model.Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Label_Description</label>
                                        <div class="controls">
                                            <textarea class="form-control" cols="5" id="desciptionDocument">@Model.Description</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 no-padding">
                                <div class="col-12-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Label_File_Attach<span class="required">*</span></label>
                                        <div class="controls text-left">
                                            <input type="file" id="uploadFileDocument" uploader="uploader" multiple="" style="display:none;">
                                            <button type="button" class="btn btn-success btn-s" onclick="$('#uploadFileDocument').click()">
                                                <span class="glyphicon glyphicon-upload"></span> @InformationHub.Resource.Resource.Label_Choose_File
                                            </button>
                                            <button type="button" class="btn btn-danger btn-s" onclick="DeleteFile()">
                                                <span class="glyphicon glyphicon-trash"></span> @InformationHub.Resource.Resource.Delete_Title
                                            </button>
                                        </div>
                                        <span id="nameFile"><a target="_blank" href="@Model.Path">@Model.FileName</a></span>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">

                                    <button onclick="UpdateDocument(false)" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-save "></i> &nbsp; <span>@InformationHub.Resource.Resource.Save_Title</span>
                                    </button>

                                    <a href="/Document/Index" class="btn btn-default btn-icon right10">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>@InformationHub.Resource.Resource.Exit_Title</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
<input type="hidden" id="documentId" />
<script>
    $('#documentTyeid').val('@Model.DocumentTyeid');
    $('#documentId').val('@Model.Id');
</script>
<script src="~/ScriptControllers/DocumentUpdateControllers.js"></script>