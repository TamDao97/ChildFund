@{
    ViewBag.Title = InformationHub.Resource.Resource.Document_Add_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Document_Add_Title</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-lg-8 col-md-7 col-sm-6 col-xs-12 no-padding">

                                <div class="col-lg-6 col-md-6 col-sm-10 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Document_Group</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="documentTyeid">
                                                @Html.Action("DocumentTyeCBB", "Combobox");
                                            </select>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2" style="margin-top:35px; margin-left:0px">
                                    <button onclick="DocumentTypeShow()" type="button" class="btn btn-xs btnfuntion" title="@InformationHub.Resource.Resource.Document_Group_Add_Title"><i class="fa fa-plus" style="color:#0094ff;font-size:24px;"></i></button>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">@InformationHub.Resource.Resource.Label_Status</label>
                                        <div class="controls">
                                            <select class="form-control" id="statusSearch">
                                                <option value="1">@InformationHub.Resource.Resource.Label_Display</option>
                                                <option value="0">@InformationHub.Resource.Resource.Label_Not_Display</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Document_Name<span class="required">*</span></label>

                                        <div class="controls">
                                            <input type="text" class="form-control" id="nameDocument">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Label_Description</label>

                                        <div class="controls">
                                            <textarea class="form-control" maxlength="500" cols="5" id="desciptionDocument"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 no-padding">
                                <div class="col-12-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">@InformationHub.Resource.Resource.Label_File_Attach<span class="required">*</span></label>
                                        <div class="controls text-left">
                                            <input type="file" id="uploadFileDocument" uploader="uploader" multiple="" style="display:none;">
                                            <button type="button" class="btn btn-success btn-s" onclick="$('#uploadFileDocument').click()">
                                                <span class="glyphicon glyphicon-upload"></span> @InformationHub.Resource.Resource.Label_Choose_File
                                            </button>
                                            <button type="button" class="btn btn-danger btn-s" onclick="DeleteFile()">
                                                <span class="glyphicon glyphicon-trash"></span> @InformationHub.Resource.Resource.Delete_Title
                                            </button>
                                        </div>
                                        <span id="nameFile"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">

                                    <button onclick="CreateDocument(false)" class="btn btn-success btn-icon right10">
                                        <i class="fa fa-save "></i> &nbsp; <span>@InformationHub.Resource.Resource.Save_Title</span>
                                    </button>

                                    <a href="/Document/Index" class="btn btn-default btn-icon right10">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>@InformationHub.Resource.Resource.Exit_Title</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<div id="modalDocumentType" class="modal fade" role="dialog" tabindex="-1" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog modal-sm" style="width:800px">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="h4Title">@InformationHub.Resource.Resource.Document_Group_Manage</h4>
            </div>
            <input type="hidden" id="ReportProfileId" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <span class="input-icon icon-right">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                            <div class="form-group">
                                                <label class="form-label">@InformationHub.Resource.Resource.Document_Group_Name<span class="required">*</span></label>
                                                <div class="controls">
                                                    <input type="text" class="form-control" id="nameDocumentType">
                                                </div>
                                                <button onclick="CreateDocumentType()" type="button" class="btn btn-success btn-icon"><i class="fa fa-save" style="color:#FFF;font-size:16px">  @InformationHub.Resource.Resource.Add_Title</i></button>
                                                <button onclick="UpdateDocumentType()" type="button" class="btn btn-success btn-icon"><i class="fa fa-edit" style="color:#FFF;font-size:16px; ">  @InformationHub.Resource.Resource.Label_Update</i></button>

                                            </div>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-sm-6 col-xs-6 text-left" style="margin-top:10px;">
                                            <h4>
                                                @InformationHub.Resource.Resource.Total_Title <b class="badge badge-primary" id="count_data"></b> @InformationHub.Resource.Resource.Document
                                            </h4>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" ;">
                                            <div class="margin-bottom-10" id="list_data">
                                            </div>
                                        </div>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> @InformationHub.Resource.Resource.Exit_Title</button>
            </div>
        </div>
    </div>
</div>

<script src="~/ScriptControllers/DocumentCreateControllers.js"></script>
