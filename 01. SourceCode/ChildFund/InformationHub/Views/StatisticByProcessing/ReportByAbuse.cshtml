@{
    ViewBag.Title = @InformationHub.Resource.Resource.Report_By_AbuseType;
    Layout = "~/Views/Shared/_Layout.cshtml";
    InformationHub.Model.LoginProfileModel userInfo = (InformationHub.Model.LoginProfileModel)ViewBag.userInfo;
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box collapsed">
                    <header class="panel_header">
                        <h2 class="title pull-left">@InformationHub.Resource.Resource.Search_Title</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">

                            <div class="col-md-7 col-sm-7 col-xs-7">
                                <div class="row">
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Area_Province</label>
                                            <select class="form-control" id="provinceId" onchange="GetDistrict()">
                                                <option selected value="">@InformationHub.Resource.Resource.All_Title</option>
                                                @Html.Action("ProvinceCBB", "Combobox")
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_District</label>
                                            <select class="form-control" id="districtId" onchange="GetWard()">
                                                <option selected value="">@InformationHub.Resource.Resource.All_Title</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.Label_Ward</label>
                                            <select class="form-control" id="wardId">
                                                <option selected value="">@InformationHub.Resource.Resource.All_Title</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5 col-sm-5 col-xs-5">
                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <div class="controls">
                                                <label class="form-label">@InformationHub.Resource.Resource.DayFrom_Title</label>
                                                <input placeholder="@InformationHub.Resource.Resource.Label_Date" id="dateFromSearch" type="text" class="form-control datepicker">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <label class="form-label">@InformationHub.Resource.Resource.DayTo_Title</label>
                                            <div class="controls">
                                                <input placeholder="@InformationHub.Resource.Resource.Label_Date" id="dateToSearch" type="text" class="form-control datepicker">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row padding-top-10 padding-right-20 text-right">

                            <button onclick="Search(0)" class="btn btn-success btn-icon right10">
                                <i class="fa fa-search"></i> &nbsp; <span>@InformationHub.Resource.Resource.Search_Title</span>
                            </button>
                            <button onclick="Refresh()" class="btn btn-default btn-icon">
                                <i class="fa fa-refresh"></i> &nbsp; <span>@InformationHub.Resource.Resource.Reset_Title</span>
                            </button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <div class="col-lg-12 col-md-12">
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left">
                        @InformationHub.Resource.Resource.Report_Statistic_Title
                    </h2>
                    <div class="actions panel_actions pull-right">
                        <i class="box_toggle material-icons">expand_more</i>
                    </div>
                </header>
                <div class="content-body padding-bottom-10">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                        <a href="#" id="linkDowload"></a>
                        <button class="btn btn-info btn-icon right10" type="button" onclick="Search(1)">
                            <i class="fa fa-file-excel-o" aria-hidden="true"></i> &nbsp; <span>@InformationHub.Resource.Resource.Export_Title</span>
                        </button>
                        <button class="btn btn-warning btn-icon right10" type="button" onclick="Search(2)">
                            <i class="fa fa-file-pdf-o" aria-hidden="true"></i> &nbsp; <span>@InformationHub.Resource.Resource.ExportPDF_Title</span>
                        </button>
                    </div>
                    <div class="row">
                        
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div id="processingChart" style="width:100%; height: 400px; margin: 0 auto"></div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <h4 class="margin-top-10 margin-bottom-10">@InformationHub.Resource.Resource.Statistic_Title</h4>
                                <div style="width:100%;overflow-x:auto">
                                    <table class="table table-bordered table-hover" style="min-width:1024px">
                                        <thead>
                                            <tr>
                                                <th>@InformationHub.Resource.Resource.ReportProfile_AbuseType</th>
                                                <th width="150px" class="text-center">@InformationHub.Resource.Resource.ReportProfile_Status1</th>
                                                <th width="200px" class="text-center">@InformationHub.Resource.Resource.ReportProfile_Status2</th>
                                                <th width="200px" class="text-center">@InformationHub.Resource.Resource.ReportProfile_Status3</th>
                                                <th width="190px" class="text-center">@InformationHub.Resource.Resource.ReportProfile_Status4</th>
                                                <th width="150px" class="text-center">@InformationHub.Resource.Resource.ReportProfile_Status5</th>
                                            </tr>
                                        </thead>
                                        <tbody id="data_table"></tbody>
                                    </table>
                                </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
<script src="~/ScriptControllers/StatisticByAbuseController.js"></script>
<script>
    window.onload = InitFuntion('@userInfo.Type', '@userInfo.ProvinceId', '@userInfo.DistrictId');
</script>