@model IList<ChildFund.Model.SearchResults.CategorySearchResult>
@{
    ViewBag.Title = "Quản lý nhóm tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách nhóm tin</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" >Tên nhóm tin</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="categoryName" >
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" >Trạng thái</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" id="categoryStatus">
                                            <option value="">Tất cả</option>
                                            <option value="1">Hiển thị</option>
                                            <option value="0">Không hiển thị</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-4 col-xs-4 text-right">
                                <div class="form-group margin-top-20">
                                    <button class="btn btn-success btn-icon right10" onclick="Timkiem()">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button class="btn btn-success btn-icon right10" onclick="Lammoi()">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row margin-bottom-5">
                            <div class="col-md-9 col-sm-9 col-xs-9 text-left">
                                <h4>
                                    Tổng số <b class="badge badge-primary">5</b> nhóm tin
                                </h4>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 text-right">
                                <button class="btn btn-info" type="button" id="addproductbutton" data-toggle="modal" data-target="#editmodam"><i class="fa fa-fw fa-plus"></i>Thêm mới Model</button>
                                <a href="/home/QLThemNhomTin" class="btn btn-success">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Tạo mới</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10" id="div_category">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button type="button" class="btn btn-xs btn-warning" title="Cập nhật bài viết"><i class="material-icons">edit</i></button>&nbsp;<small class="padding-right-20">Cập nhật nhóm tin</small>
                                <button class="btn btn-xs btn-danger"><i class="material-icons">delete</i></button>&nbsp;<small class="padding-right-20">Xóa nhóm tin</small>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

<div id="editmodam" class="modal fade" role="dialog" onscroll="scroll" data-backdrop="static" style="background-color: rgba(0,0,0,0.3)">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #5db2ff; color: white">
                <button type="button" id="close_producet" class="close" data-dismiss="modal">&times;</button>
                <h4 style="color:white">Thêm quảng cáo</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Tên hình ảnh(*)</label>
                                <input type="text" class="form-control" name="advName" id="advName" placeholder="Tên quảng cáo" required="required">
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Loại quảng cáo:</label>
                                <select class="form-control" id="atype" name="atype">
                                    @*<option value="10">Logo trên(trang home)</option>*@
                                    <option value="0">Logo trên(width: 230px - height: 50px)</option>
                                    <option value="1">Logo dưới(width: 45px - height: 32px)</option>
                                    <option value="2">Slide(width: 1580px - height: 300px)</option>
                                    <option value="3">Quảng cáo trái(width: 278px - height: 230px)</option>
                                    <option value="4">Đối tác - khách hàng(width: 175px - height: 82px)</option>


                                </select>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Chọn ảnh:</label>
                                <input type="hidden" id="idupdate" name="idupdate" value="-1" />
                                <input type="text" class="form-control" name="img" id="img" placeholder="Chọn ảnh">
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Link:</label>
                                <input type="text" class="form-control" placeholder="link" id="link" name="link">
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Độ rộng(px)(*)</label>
                                <input type="number" value="100" class="form-control" placeholder="Độ rộng" id="advW" name="advW" required="required">
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Độ cao(px)(*)</label>
                                <input type="number" value="100" class="form-control" placeholder="Độ cao" id="advH" name="advH" required="required">
                            </span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Thứ tự(*)</label>
                                <input type="number" value="1" class="form-control" placeholder="Thứ tự" id="advThutu" name="advThutu" required="required">
                            </span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <span class="input-icon icon-right">
                                <label>Kích hoạt:</label>
                                <select class="form-control" id="active" name="active">
                                    <option value="1">Kích hoạt</option>
                                    <option value="0">Ko kích hoạt</option>
                                </select>
                            </span>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="modal-footer" style="margin-top: -20px;">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-save"></i> Lưu lại</button>
                    <button type="button" id="closeprffffoduct" class="btn btn-danger" data-dismiss="modal"><i class="glyphicon glyphicon-minus-sign"></i> Thoát</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/JsControllers/CategoryControllers.js"></script>
<script>
    window.onload = Timkiem();
</script>
