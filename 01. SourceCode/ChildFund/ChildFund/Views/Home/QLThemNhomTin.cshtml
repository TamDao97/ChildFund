
@{
    ViewBag.Title = "Thêm mới nhóm tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thêm mới nhóm tin</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="col-md-8 col-sm-8 col-xs-8">
                                        <div class="form-group">
                                            <label class="form-label">Tên nhóm tin</label>

                                            <div class="controls">
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-4 col-xs-4">
                                        <div class="form-group">
                                            <label class="form-label">
                                                Thứ tự ưu tiên
                                            </label>

                                            <div class="controls">
                                                <input type="text" class="form-control">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-8 col-sm-8 col-xs-8">
                                        <div class="form-group">
                                            <label class="form-label">Nhóm tin cha</label>

                                            <div class="controls">
                                                <select class="form-control ">
                                                    <option value="Default Select">Chọn</option>
                                                    <option value="Option 1">Chính sách pháp luật</option>
                                                    <option value="Option 2">Các khóa học cho trẻ</option>
                                                    <option value="Option 3">Tài liệu hướng dẫn</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-2 col-sm-2 col-xs-2">
                                        <div class="form-group">
                                            <label class="form-label">
                                                Hiển thị trang chủ
                                            </label>

                                            <div class="controls">
                                                <label class="iswitch bg-accent ">
                                                    <input type="checkbox" checked>
                                                    <i></i>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-2">
                                        <div class="form-group">
                                            <label class="form-label">
                                                Trạng thái
                                            </label>

                                            <div class="controls">
                                                <label class="iswitch bg-accent ">
                                                    <input type="checkbox" checked>
                                                    <i></i>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="form-label">Mô tả</label>
                                            <div class="controls">
                                                <textarea class="form-control" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="form-label">Title seo</label>
                                            <div class="controls">
                                                <textarea class="form-control"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="form-label">Description seo</label>
                                            <div class="controls">
                                                <textarea class="form-control" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label class="form-label">Keyword seo</label>
                                            <div class="controls">
                                                <textarea class="form-control" ></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                        </div>
                        <div class="row padding-10">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                        <div class="form-group margin-bottom-10 ">
                                            <a href="/home/hsmaucauchuyen" class="btn btn-success btn-icon right10">
                                                <i class="fa fa-save "></i> &nbsp; <span>Lưu</span>
                                            </a>
                                            <button class="btn btn-default btn-icon">
                                                <i class="fa fa-power-off"></i> &nbsp; <span>Thoát</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                               
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

