@model ChildFund.Controllers.ModelContent
@{
    ViewBag.Title = "Thêm mới bài tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thêm mới bài tin</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-md-9 col-sm-9 col-xs-9 no-padding">
                                <div class="col-md-8 col-sm-8 col-xs-8">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Nhóm tin</label>

                                        <div class="controls">
                                            <select class="form-control ">
                                                <option value="Default Select">Chọn</option>
                                                <option value="Option 1">Option 1</option>
                                                <option value="Option 2">Option 2</option>
                                                <option value="Option 3">Option 3</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-2">
                                    <div class="form-group">
                                        <label class="form-label">
                                            Hiển thị trang chủ
                                        </label>

                                        <div class="controls">
                                            <label class="iswitch bg-accent ">
                                                <input type="checkbox" checked>
                                                <i></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 col-sm-2 col-xs-2">
                                    <div class="form-group">
                                        <label class="form-label">
                                            Trạng thái
                                        </label>

                                        <div class="controls">
                                            <label class="iswitch bg-accent ">
                                                <input type="checkbox" checked>
                                                <i></i>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Tiêu đề bài tin</label>

                                        <div class="controls">
                                            <input type="text" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Mô tả ngắn</label>

                                        <div class="controls">
                                            <textarea class="form-control" cols="5" id="field-6"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Title seo</label>
                                        <div class="controls">
                                            <textarea class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Description seo</label>
                                        <div class="controls">
                                            <textarea class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Keyword seo</label>
                                        <div class="controls">
                                            <textarea class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 no-padding">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label" for="field-1">Ảnh tiêu đề</label>

                                        <div class="controls text-center">
                                            <button type="button" class="btn btn-success btn-s" ng-click="uploader.uploadAll()">
                                                <span class="glyphicon glyphicon-upload"></span> Upload
                                            </button>
                                            <button type="button" class="btn btn-danger btn-s" ng-click="uploader.clearQueue()">
                                                <span class="glyphicon glyphicon-trash"></span> Xóa
                                            </button>
                                        </div>
                                        <div class="controls text-center margin-top-10">
                                            <img src="~/img/logo.png">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Nội dung </label>

                                    <div class="controls">
                                        @Html.EditorFor(model => model.Content)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <a href="/home/danhsachca">
                                        <button class="btn btn-success btn-icon right10">
                                            <i class="fa fa-save "></i> &nbsp; <span>Lưu</span>
                                        </button>
                                    </a>
                                    <button class="btn btn-default btn-icon">
                                        <i class="fa fa-power-off"></i> &nbsp; <span>Thoát</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
          
        </div>
    </div>
</section>

