
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Thư viện tài liệu</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Tên tài liệu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Loại tài liệu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control ">
                                            <option value="Default Select">Tất cả</option>
                                            <option value="Option 1">Option 1</option>
                                            <option value="Option 2">Option 2</option>
                                            <option value="Option 3">Option 3</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Mô tả</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-4 text-right">
                                <div class="form-group margin-top-20">
                                    <button class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class=" team-info margin-bottom-15">
                                    <span class="ng-binding">Tổng số <b>10</b> tài liệu tìm được</span>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 left-aligned padding-top-0">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Tên tài liệu</th>
                                            <th>Loại tài liệu</th>
                                            <th>Ngày đăng</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="">
                                            <td class="brief">
                                                <span data-class="file-word-o" class="text-info"><i class="fa fa-file-word-o" style="font-size:25px;"></i></span>
                                            </td>
                                            <td class="fromnow">Báo cáo tiếp nhận thông tin trẻ em </td>
                                            <td class="fromnow">Tài liệu chính sách pháp luật</td>
                                            <td class="fromnow">20/11/2017</td>
                                            <td class="fromnow"><button type="button" class="btn btn-xs btn-success"><i class="material-icons">file_download</i></button></td>
                                        </tr>
                                        <tr class="">
                                            <td class="brief">
                                                <span data-class="file-word-o" class="text-warning"><i class="fa fa-file-pdf-o" style="font-size:25px;"></i></span>
                                            </td>
                                            <td class="fromnow">Quyết định về việc phê duyệt Kế hoạch hỗ trợ, can thiệp</td>
                                            <td class="fromnow">Tài liệu quy trình xử lý ca sự vụ</td>
                                            <td class="fromnow">20/11/2017</td>
                                            <td class="fromnow"><button type="button" class="btn btn-xs btn-success"><i class="material-icons">file_download</i></button></td>
                                        </tr>
                                        <tr class="">
                                            <td class="brief">
                                                <span data-class="file-word-o" class="text-accent"><i class="fa fa-file-video-o" style="font-size:25px;"></i></span>
                                            </td>
                                            <td class="fromnow">Báo cáo xác minh cá nhân, gia đình nhận chăm sóc thay thế  </td>
                                            <td class="fromnow">Khóa đào tạo trẻ em</td>
                                            <td class="fromnow">20/11/2017</td>
                                            <td class="fromnow"><button type="button" class="btn btn-xs btn-success"><i class="material-icons">file_download</i></button></td>
                                        </tr>
                                        <tr class="">
                                            <td class="brief">
                                                <span data-class="file-word-o" class="text-warning"><i class="fa fa-file-pdf-o" style="font-size:25px;"></i></span>
                                            </td>
                                            <td class="fromnow">Quyết định về việc tạm thời cách ly trẻ em khỏi cha, mẹ, người chăm sóc trẻ em </td>
                                            <td class="fromnow">Tài liệu hướng dẫn</td>
                                            <td class="fromnow">20/11/2017</td>
                                            <td class="fromnow"><button type="button" class="btn btn-xs btn-success"><i class="material-icons">file_download</i></button></td>
                                        </tr>
                                        <tr class="">
                                            <td class="brief">
                                                <span data-class="file-word-o" class="text-warning"><i class="fa fa-file-pdf-o" style="font-size:25px;"></i></span>
                                            </td>
                                            <td class="fromnow">Hướng dẫn xử lý khi có trẻ bị xâm hại tình dục</td>
                                            <td class="fromnow">Tài liệu hướng dẫn</td>
                                            <td class="fromnow">20/11/2017</td>
                                            <td class="fromnow"><button type="button" class="btn btn-xs btn-success"><i class="material-icons">file_download</i></button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 ">
                                <span class="form-label-custom">
                                    Số bản ghi/trang:
                                </span>
                                <select style="width: 120px;" class="form-control ng-pristine ng-valid ng-touched" data-ng-model="vm.Model.PageSize" data-ng-options="unit.Id as unit.Name for unit in vm.ListPageSize" ng-change="vm.FnSearch()">
                                    <option label="5 bản ghi" value="number:10" selected="selected">5 bản ghi</option>
                                    <option label="10 bản ghi" value="number:10">10 bản ghi</option>
                                    <option label="15 bản ghi" value="number:15">15 bản ghi</option>
                                    <option label="20 bản ghi" value="number:20">20 bản ghi</option>
                                    <option label="30 bản ghi" value="number:30">30 bản ghi</option>
                                    <option label="40 bản ghi" value="number:40">40 bản ghi</option>
                                    <option label="50 bản ghi" value="number:50">50 bản ghi</option>
                                </select>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8" ng-show="totalItems>vm.Model.PageSize" style="">
                                <ul class="pagination-sm pagination ng-isolate-scope ng-valid" ng-change="vm.FnSearch()" total-items="totalItems" ng-model="currentPage" max-size="maxSize" boundary-links="true" items-per-page="vm.Model.PageSize">
                                    <!-- ngIf: ::boundaryLinks -->
                                    <li ng-if="::boundaryLinks" ng-class="{disabled: noPrevious()||ngDisabled}" class="pagination-first ng-scope disabled"><a href="" ng-click="selectPage(1, $event)" class="ng-binding">Đầu tiên</a></li>
                                    <li ng-if="::directionLinks" ng-class="{disabled: noPrevious()||ngDisabled}" class="pagination-prev ng-scope disabled"><a href="" ng-click="selectPage(page - 1, $event)" class="ng-binding">Trước</a></li>
                                    <li ng-repeat="page in pages track by $index" ng-class="{active: page.active,disabled: ngDisabled&amp;&amp;!page.active}" class="pagination-page ng-scope active"><a href="" ng-click="selectPage(page.number, $event)" class="ng-binding">1</a></li>
                                    <li ng-repeat="page in pages track by $index" ng-class="{active: page.active,disabled: ngDisabled&amp;&amp;!page.active}" class="pagination-page ng-scope" style=""><a href="" ng-click="selectPage(page.number, $event)" class="ng-binding">2</a></li>
                                    <li ng-if="::directionLinks" ng-class="{disabled: noNext()||ngDisabled}" class="pagination-next ng-scope" style=""><a href="" ng-click="selectPage(page + 1, $event)" class="ng-binding">Kế tiếp</a></li>
                                    <li ng-if="::boundaryLinks" ng-class="{disabled: noNext()||ngDisabled}" class="pagination-last ng-scope" style=""><a href="" ng-click="selectPage(totalPages, $event)" class="ng-binding">Cuối cùng</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

