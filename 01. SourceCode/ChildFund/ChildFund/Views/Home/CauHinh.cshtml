@model ChildFund.Controllers.ModelContent
@{
    ViewBag.Title = "Quản lý cấu hình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Quản lý cấu hình</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-10">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <div class="form-group">
                                    <label class="form-label">Email thông báo gửi các trường hợp lên cấp trên</label>

                                    <div class="controls">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label margin-bottom-10">Show blog tìm kiếm trên các trang</label>

                                    <div class="controls">
                                        <label class="iswitch bg-accent ">
                                            <input type="checkbox" checked="">
                                            <i></i>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-2">
                                <div class="form-group">
                                    <label class="form-label">Số bảng ghi trên một trang</label>

                                    <div class="controls">
                                        <input type="number" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <a href="/home/danhsachca">
                                        <button class="btn btn-success btn-icon right10">
                                            <i class="fa fa-save "></i> &nbsp; <span>Lưu</span>
                                        </button>
                                    </a>
                                    <button class="btn btn-default btn-icon">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Thoát</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

        </div>
    </div>
</section>


