
@{
    ViewBag.Title = "Danh sách menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper">
    <div ui-view="" class="ng-scope">
        <div class="content-wrapper">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">Danh sách menu</h2>
                        <div class="actions panel_actions pull-right">
                            <i class="box_toggle material-icons">expand_more</i>
                        </div>
                    </header>
                    <div class="content-body padding-bottom-0">
                        <div class="row">
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Tên menu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Vị trí</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control ">
                                            <option value="Default Select">Tất cả</option>
                                            <option value="Option 1">Menu trên</option>
                                            <option value="Option 2">Menu dưới</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Loại menu</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control ">
                                            <option value="Default Select">Tất cả</option>
                                            <option value="Option 1">Menu liên kết</option>
                                            <option value="Option 2">Menu link</option>
                                            <option value="Option 3">Menu nội dung</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-4 col-xs-4">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Trạng thái</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control ">
                                            <option value="Default Select">Tất cả</option>
                                            <option value="Option 1">Hiển thị</option>
                                            <option value="Option 2">Không hiển thị</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 text-right">
                                <div class="form-group margin-top-20">
                                    <button class="btn btn-success btn-icon right10">
                                        <i class="fa fa-search"></i> &nbsp; <span>Tìm kiếm</span>
                                    </button>
                                    <button class="btn btn-success btn-icon right10">
                                        <i class="fa fa-refresh"></i> &nbsp; <span>Làm mới</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row margin-bottom-5">
                            <div class="col-md-9 col-sm-9 col-xs-9 text-left">
                                <h4>
                                    Tổng số <b class="badge badge-primary">5</b> menu
                                </h4>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-3 text-right">
                                <a href="/home/QLThemMenu" class="btn btn-success">
                                    <i class="fa fa-plus"></i> &nbsp; <span>Tạo mới</span>
                                </a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="margin-bottom-10">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr>
                                                <th width="50px">STT</th>
                                                <th>Tên menu</th>
                                                <th>Nhóm cha</th>
                                                <th>Thứ tự</th>
                                                <th>Vị trí</th>
                                                <th>Loại menu</th>
                                                <th width="100px">Trạng thái</th>
                                                <th width="110px">Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row">1</th>
                                                <td>Trang chủ</td>
                                                <td>Nhóm cha</td>
                                                <td>1</td>
                                                <td>Menu trên</td>
                                                <td>Menu liên kết</td>
                                                <td>
                                                    <label class="iswitch bg-accent ">
                                                        <input type="checkbox" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-xs btn-warning" title="Cập nhật bài viết"><i class="material-icons">edit</i></button>
                                                    <button type="button" class="btn btn-xs btn-danger" title="Xóa bài viết"><i class="material-icons">delete</i></button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">2</th>
                                                <td>Tin tức</td>
                                                <td>Nhóm cha</td>
                                                <td>2</td>
                                                <td>Menu trên</td>
                                                <td>Menu link</td>
                                                <td>
                                                    <label class="iswitch bg-accent ">
                                                        <input type="checkbox" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-xs btn-warning" title="Cập nhật bài viết"><i class="material-icons">edit</i></button>
                                                    <button type="button" class="btn btn-xs btn-danger" title="Xóa bài viết"><i class="material-icons">delete</i></button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th scope="row">3</th>
                                                <td>Giới thiệu</td>
                                                <td>Nhóm cha</td>
                                                <td>3</td>
                                                <td>Menu dưới</td>
                                                <td>Menu nội dung</td>
                                                <td>
                                                    <label class="iswitch bg-accent ">
                                                        <input type="checkbox" checked="">
                                                        <i></i>
                                                    </label>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-xs btn-warning" title="Cập nhật bài viết"><i class="material-icons">edit</i></button>
                                                    <button type="button" class="btn btn-xs btn-danger" title="Xóa bài viết"><i class="material-icons">delete</i></button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 margin-bottom-10">
                                <hr class="margin-bottom-10 margin-top-0" />
                                <button type="button" class="btn btn-xs btn-warning" title="Cập nhật bài viết"><i class="material-icons">edit</i></button>&nbsp;<small class="padding-right-20">Cập nhật menu</small>
                                <button class="btn btn-xs btn-danger"><i class="material-icons">delete</i></button>&nbsp;<small class="padding-right-20">Xóa menu</small>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>
