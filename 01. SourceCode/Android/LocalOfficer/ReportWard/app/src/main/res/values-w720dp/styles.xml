<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Login">
        <item name="android:layout_width">550dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextForgotPassword">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#2962FF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSize">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextSizeHeader">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="TitleLabel">
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="SubTitleLabel">
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="LabelIcon">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LabelStyleRequired">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:drawableRight">@drawable/ic_required</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="LabelBlackStyle">
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ItemLabelTitleStyle">
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemLabelStyle">
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ItemSubLabelStyle">
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">40dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
    </style>

    <style name="TextareaTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
        <item name="android:drawableRight">@drawable/ic_date</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="TimePickerStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
        <item name="android:drawableRight">@drawable/ic_time</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
        <item name="android:drawableRight">@drawable/ic_arrow_drop_down</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="ChooseListStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:backgroundTint">@color/grey_40</item>
        <item name="android:drawableRight">@drawable/ic_view_list</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:height">45dp</item>
        <item name="android:textColor">@color/grey_1000</item>
        <item name="android:backgroundTint">@color/grey_40</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="SearchButtonStatic">
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TextHeadingDetail">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:paddingBottom">5dp </item>
    </style>

    <style name="LabelFilterStyle">
        <item name="android:textSize">18dp</item>
    </style>
</resources>