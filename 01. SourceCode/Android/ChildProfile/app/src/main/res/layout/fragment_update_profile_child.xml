<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="?attr/actionBarSize">
            <!--Các bước nhập hồ sơ trẻ-->
            <include
                layout="@layout/include_create_profile_step1"
                android:visibility="visible"></include>

            <!--&lt;!&ndash;2. Thông tin cụ thể về trẻ&ndash;&gt;-->
            <include
            layout="@layout/include_create_profile_step2"
            android:visibility="gone"></include>

            <!--&lt;!&ndash;3. Thông tin về các thành viên trong gia đình trẻ&ndash;&gt;-->
            <include
            layout="@layout/include_create_profile_step3"
            android:visibility="gone"></include>

            <!--&lt;!&ndash;4. Thông tin về điều kiện sống của gia đình&ndash;&gt;-->
            <include
            layout="@layout/include_create_profile_step4"
            android:visibility="gone"></include>

            <!--&lt;!&ndash;5. Thông tin Cam kết gia đình;&gt;-->
            <include
                layout="@layout/include_create_profile_step5"
                android:visibility="gone"></include>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lyt_back"
                android:background="@drawable/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_middle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/ic_chevron_left" />

                <TextView
                    style="@style/ButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quay lại/ BACK"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:background="@color/grey_bg"
                android:id="@+id/layoutDots"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/lyt_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/btn_next"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_middle">

                <TextView
                    style="@style/ButtonStyle"
                    android:id="@+id/txtNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiếp theo/ NEXT"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/colorWhite"
                    app:srcCompat="@drawable/ic_chevron_right" />

            </LinearLayout>

        </LinearLayout>
        <include
            android:id="@+id/progressDialog"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            layout="@layout/progress_layout"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
